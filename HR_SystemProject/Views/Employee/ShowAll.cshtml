@model List<Employee>
@{
    ViewData["Title"] = "ShowAll";
}

<h1>Employee List</h1>

<table class="table">
  <thead>
      <tr>
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col">Phone</th>
          <th scope="col">Gender</th>
          <th scope="col">Nationality</th>
          <th scope="col">BirthDate</th>
          <th scope="col">SSN</th>
          <th scope="col">ContractDate</th>
          <th scope="col">Salary</th>
          <th scope="col">Attend Time</th>
          <th scope="col">Depart Time</th>
      </tr>    
  </thead>
  <tbody>
    @foreach (var item in Model)
      {
          <tr>
              <partial name="_TableRow" model="item"/>
          </tr>
      }
  </tbody>
</table>
<a asp-controller="Employee" asp-action="New" class="btn btn-primary">Add Employee</a>
